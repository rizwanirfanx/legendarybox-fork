    "custom_liquid_egAAfi": {
      "type": "custom-liquid",
      "custom_css": [],
      "settings": {
        "custom_liquid": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n  <title>Plan Selector</title>\n  <style>\n    body {\n      font-family: 'Merriweather', serif;\n      background-color: #f9f9f9;\n      margin: 0;\n      padding: 0;\n      box-sizing: border-box;\n    }\n    \n    .container {\n      max-width: 1000px;\n      margin: 20px auto;\n      background-color: #103948;\n      padding: 20px;\n      border-radius: 10px;\n      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);\n      text-align: center;\n    }\n    \n    h2 {\n      font-size: 28px;\n      margin-bottom: 30px;\n      color: #fff;\n    }\n    \n    .plan-group {\n      display: flex;\n      justify-content: space-between;\n      flex-wrap: wrap;\n      gap: 20px;\n    }\n    \n    .plan {\n      flex: 1 1 calc(25% - 20px);\n      /* border: 2px solid #A3F20C; */ /* Border removed using Option 1 */\n      border-radius: 10px;\n      padding: 20px;\n      text-align: center;\n      background-color: #fff;\n      transition: transform 0.3s, box-shadow 0.3s;\n      position: relative;\n    }\n    \n    .plan:hover {\n      transform: translateY(-5px);\n      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);\n    }\n    \n    .plan-title {\n      font-size: 20px;\n      font-weight: bold;\n      color: #e63946;\n      margin-bottom: 10px;\n    }\n    \n    .plan-title span {\n      display: block;\n    }\n    \n    .plan-detail {\n      font-size: 24px;\n      font-weight: bold;\n      color: #333;\n      margin-bottom: 10px;\n    }\n    \n    .plan-detail span {\n      font-size: 16px;\n      color: #666;\n    }\n    \n    .plan-total {\n      font-size: 16px;\n      color: #666;\n      margin-bottom: 10px;\n    }\n    \n    /* Updated CTA button styling */\n    .cta-button {\n      margin-top: 20px;\n      padding: 12px 40px;\n      background-color: #e63946;\n      color: #fff;\n      text-decoration: none;\n      font-size: 18px;\n      font-weight: bold;\n      text-transform: uppercase;\n      letter-spacing: 1px;\n      border-radius: 50px;\n      border: none;\n      display: inline-block;\n      transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;\n      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);\n    }\n    \n    .cta-button:hover {\n      background-color: #c71f1f;\n      transform: translateY(-2px);\n      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);\n    }\n    \n    @media (max-width: 768px) {\n      .plan {\n        flex: 1 1 calc(50% - 20px);\n      }\n    }\n    \n    @media (max-width: 480px) {\n      .plan {\n        flex: 1 1 100%;\n      }\n    }\n    \n    /* Bonus text on prepaid plan boxes, now placed under the CTA button */\n    .bonus-scoop {\n      font-size: 14px;\n      color: #c71f1f;\n      margin-top: 10px;\n      font-style: italic;\n    }\n    \n    /* Banner for prepaid subscription bonus info (border and background removed) */\n    .prepaid-gift-info {\n      margin-top: 20px;\n      padding: 10px 20px;\n      background-color: transparent;\n      border-radius: 10px;\n      display: flex;\n      flex-direction: column;  /* Stack text and image vertically */\n      align-items: center;     /* Center items horizontally */\n      font-size: 16px;\n      font-weight: bold;\n      color: #A3F20C;\n    }\n    \n    /* Updated CSS for the coffee scoop image */\n    .scoop-thumb {\n      margin-top: 5px;  /* Reduced spacing between text and image */\n      width: 200px;     /* Increased width for a larger image */\n      height: auto;     /* Maintain aspect ratio */\n    }\n    \n    .gift-text {\n      text-align: center;\n    }\n  </style>\n</head>\n<body>\n  <div id=\"plan-selector\" class=\"container\">\n    <h2>Choose Your Subscription Plan</h2>\n    <div class=\"plan-group\">\n      <!-- Monthly Plan (no bonus text) -->\n      <div class=\"plan\">\n        <div class=\"plan-title\">Monthly<span>Plan</span></div>\n        <div class=\"plan-detail\">$42.99<span>/mo.</span></div>\n        <div class=\"plan-total\">+ Shipping</div>\n        <a href=\"https://legendarybox.com/products/monthly-subscription-box\" class=\"cta-button\">Join Now</a>\n      </div>\n      \n      <!-- 3-Month Prepaid (bonus text below CTA button) -->\n      <div class=\"plan\">\n        <div class=\"plan-title\">3-Month<span>Prepaid</span></div>\n        <div class=\"plan-detail\">$41.99<span>/box</span></div>\n        <div class=\"plan-total\">$125.97<span> Total + s/h</span></div>\n        <a href=\"https://legendarybox.com/products/3-month-subscription-plan\" class=\"cta-button\">Join Now</a>\n        <div class=\"bonus-scoop\">Bonus Coffee Scoop!</div>\n      </div>\n      \n      <!-- 6-Month Prepaid (bonus text below CTA button) -->\n      <div class=\"plan\">\n        <div class=\"plan-title\">6-Month<span>Prepaid</span></div>\n        <div class=\"plan-detail\">$39.99<span>/box</span></div>\n        <div class=\"plan-total\">$239.94<span> Total + s/h</span></div>\n        <a href=\"https://legendarybox.com/products/6-month-subscription-plan\" class=\"cta-button\">Join Now</a>\n        <div class=\"bonus-scoop\">Bonus Coffee Scoop!</div>\n      </div>\n      \n      <!-- 12-Month Prepaid (bonus text below CTA button) -->\n      <div class=\"plan\">\n        <div class=\"plan-title\">12-Month<span>Prepaid</span></div>\n        <div class=\"plan-detail\">$38.99<span>/box</span></div>\n        <div class=\"plan-total\">$467.88<span> Total + s/h</span></div>\n        <a href=\"https://legendarybox.com/products/12-month-subscription-plan\" class=\"cta-button\">Join Now</a>\n        <div class=\"bonus-scoop\">Bonus Coffee Scoop!</div>\n      </div>\n    </div>\n    \n    <!-- Banner for prepaid subscription bonus info with the new coffee scoop image below the text -->\n    <div class=\"prepaid-gift-info\">\n      <div class=\"gift-text\">\n        New 3, 6, &amp; 12‑month subscribers receive a FREE Caffeine &amp; Legends drink scoop/clip in their first box!\n      </div>\n      <img src=\"https://cdn.shopify.com/s/files/1/0305/4770/5900/files/Untitled_design_54.png?v=1738623166\" alt=\"Coffee Scoop\" class=\"scoop-thumb\" />\n    </div>\n  </div>\n  \n  <script>\n    document.querySelectorAll('a[href^=\"#\"]').forEach(anchor => {\n      anchor.addEventListener('click', function(e) {\n        e.preventDefault();\n        document.querySelector(this.getAttribute('href')).scrollIntoView({\n          behavior: 'smooth'\n        });\n      });\n    });\n  </script>\n</body>\n</html>",
